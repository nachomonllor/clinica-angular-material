# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/clinica?schema=public"

# Secret para las sesiones (generar un valor aleatorio seguro)
SESSION_SECRET="change-me-to-a-random-secure-secret"

# Puerto del backend (opcional, default 3000)
PORT=3000

# Configuración de Email (SMTP)
# Para Gmail: crear "App Password" en https://myaccount.google.com/security
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-app-password"
EMAIL_FROM="Clínica Online <tu-email@gmail.com>"

# URLs de la aplicación
# En producción, cambiar por las URLs reales
FRONTEND_URL="http://localhost:4200"
BACKEND_URL="http://localhost:3000"

# Almacenamiento de imágenes
# Opciones: "local", "s3", "r2"
STORAGE_TYPE="local"

# Solo si STORAGE_TYPE=local
UPLOADS_DIR="./uploads"
STORAGE_BASE_URL="/uploads"

